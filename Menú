//haya una funci√≥n que te ponga que te situe donde quieras poner tus barcos
#include <stdio.h>
void posicion(int n);
int main()
{   posicion(5);
    printf("\n");
    posicion(4);
    printf("\n");
    posicion(3);
    printf("\n");
    posicion(1);
    
    return 0;
    
}
void posicion(int n){
    int i;
    char E;
    printf("horizontal o vertical:");
    scanf("%c",&E);
    

    
	if(E=='v'||E=='V'){
		    int fila;
		    int columna;
		    printf("En que columna quieres colocarlo:");
            scanf("%i",&columna);
		   printf("En que filas quieres colocar:\n");
		  for(i=1;i<=n;i++){
		  
		  printf("introduce la  fila %i:",i);
		  scanf("%i",&fila);
		  }
		    
		}
		else if(E=='h'||E=='H'){
		    int fila;
		    int columna;
		    printf("En que fila  quieres colocarlo:");
            scanf("%i",&fila);
		    printf("En que columnas quieres colocarlo:\n");
		    for(i=1;i<=n;i++){
		  
		   printf("introduce la  columna %i:",i);
		   scanf("%i",&columna);
		  }
		}
		    
		  
		  
    
}
