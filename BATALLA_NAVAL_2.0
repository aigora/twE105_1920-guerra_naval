/* Esta funcion va a detectar el fin del juego comprobando cuantos han sido tocados diferenciando del total cont2 y cont1 los aciertos */

int gameover(int m[10][10], int cont2){

   int res = 0, cont1 = 0;

   for(i = 0; i < 10; i++){
       for (j = 0; j < 10; j++){
       if(m[i][j] == 2){cont1 += 1;}// EL DOS QUIERE DECIR TOCADO!
       
       if(m[i][j] == 2 || m[i][j] == 1){cont2++;}
   }
    
}

if(cont1 == cont2){
       res = 1;
}

return (res);
}
/*mostrar una matriz de carracteres y bordes , es decir el tablero*/
void imprimetablero(int m[10][10]){

   for(i = 0; i <= 10; i++){
       if(i == 0){
           printf("  ");
       } else{
           printf("%c ", 'A'+i-1);
       }
   }

   printf("\n");

   for(i=0; i<10; i++){
       printf("%d ", i);

       for (j=0; j<10; j++){

           if(m[i][j] == 1){
               printf("# ");/*simboliza a el agua*/
           }else if(m[i][j] == 2){
            printf("X ");
}else{
               printf("~ ");
           }
       }
       printf("\n");
   }
}

/*Esta funcion va a hundir la flota del oponete a través de turnos */
