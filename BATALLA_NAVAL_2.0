/* Esta funcion va a transformar letras a numeros */
int transformaletra(char letra)
{
   int coordenada;

   if(letra >= 'A' || letra < 'Z'){
       coordenada = letra - 65;  //En el código ASCII esa nueva posición es un número
   }

   return(coordenada);
}
/*Esta función transformara un caracter a numero*/
int transformanumero(char num)
{
   int coordenada;

   if(num >= '0' || num < '9'){
       coordenada = num - 48;//codigo ASCII
   }

   return(coordenada);
}

